# Enable Bzlmod (module system)
common --enable_bzlmod

# Disable dependency version checking to avoid issues with transitive dependencies
build --check_direct_dependencies=off
test --check_direct_dependencies=off
run --check_direct_dependencies=off

# Convenience flags
common --ui_event_filters=-DEBUG,-INFO
common --show_timestamps

# Import platform-specific settings generated by setup_bazel.sh
try-import %workspace%/.bazelrc.local
